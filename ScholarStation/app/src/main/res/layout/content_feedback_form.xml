<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="scholarstationandroid.scholarstation.Feedback_form"
    tools:showIn="@layout/activity_feedback_form">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Helpfulness: "
        android:id="@+id/helpfulTextView" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_toRightOf="@+id/helpfulTextView"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prepare you for the course or not:"
        android:paddingTop="40dp"
        android:layout_below="@+id/helpfulTextView"
        android:id="@+id/prepareTextView"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prepareCheck"
        android:layout_toRightOf="@+id/prepareTextView"
        android:paddingTop="115dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic:"
        android:id="@+id/topicTextView"
        android:layout_below="@+id/prepareTextView"
        android:paddingTop="15dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="79dp"
        android:layout_toRightOf="@+id/topicTextView"
        android:editable="true"
        android:id="@+id/topicEditText"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topicTextView"
        android:paddingTop="15dp"
        android:text="Send Feedback"
        android:id="@+id/sendFeedback"
        />
</RelativeLayout>
